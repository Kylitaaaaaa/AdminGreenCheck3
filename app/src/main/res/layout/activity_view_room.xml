<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_edit_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thea.admingreencheck3.Add.AddEditRoomActivity">

    <Button
        android:text="B"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_A"
        android:id="@+id/btn_B"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:text="C"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_B"
        android:id="@+id/btn_C"
        android:layout_marginRight="5dp" />

    <Button
        android:text="D"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_C"
        android:id="@+id/btn_D"
        android:layout_marginRight="5dp" />

    <Button
        android:text="E"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_D"
        android:id="@+id/btn_E"
        android:layout_marginRight="5dp" />

    <Button
        android:text="F"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_E"
        android:id="@+id/btn_F"
        android:layout_marginRight="5dp" />

    <Button
        android:text="G"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_F"
        android:id="@+id/btn_G" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_business_black_24dp"
        android:id="@+id/imageView24"
        android:layout_alignBottom="@+id/tv_building"
        android:layout_alignStart="@+id/imageView23" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_directions_walk_black_24dp"
        android:layout_below="@+id/imageView24"
        android:layout_alignStart="@+id/imageView24"
        android:layout_marginTop="12dp"
        android:id="@+id/imageView25" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_satellite_black_24dp"
        android:id="@+id/imageView23"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Rotation ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBottom="@+id/imageView25"
        android:layout_toEndOf="@+id/imageView25"
        android:layout_marginStart="11dp"
        android:textSize="16sp" />

    <Button
        android:text="A"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_A"

        android:layout_marginRight="5dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tv_roomNumber"
        android:hint="Room Number"
        android:text="Room Number"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_alignBottom="@+id/imageView23"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tv_building"
        android:textSize="16sp"
        android:text="Building"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/tv_roomNumber"
        android:layout_alignStart="@+id/textView15" />
</RelativeLayout>
