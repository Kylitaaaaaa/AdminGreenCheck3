<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_edit_checker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thea.admingreencheck3.Add.AddEditChecker">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:id="@+id/imgFac"
        android:layout_marginBottom="20dp"
        app:srcCompat="@mipmap/add_btn" />

    <Button
        android:text="B"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/btn_A"
        android:layout_alignTop="@+id/btn_A"
        android:background="@drawable/round_button"
        android:id="@+id/btn_B"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:text="C"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/btn_B"
        android:layout_alignTop="@+id/btn_A"
        android:id="@+id/btn_C"
        android:layout_marginRight="5dp" />

    <Button
        android:text="D"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/btn_C"
        android:layout_alignTop="@+id/btn_A"
        android:id="@+id/btn_D"
        android:layout_marginRight="5dp" />

    <Button
        android:text="E"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/btn_D"
        android:layout_alignTop="@+id/btn_A"
        android:id="@+id/btn_E"
        android:layout_marginRight="5dp" />

    <Button
        android:text="F"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/btn_E"
        android:layout_alignTop="@+id/btn_A"
        android:id="@+id/btn_F"
        android:layout_marginRight="5dp" />

    <Button
        android:text="G"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_button"
        android:layout_toRightOf="@+id/btn_F"
        android:layout_alignTop="@+id/btn_A"
        android:id="@+id/btn_G" />

    <Button
        android:text="A"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_button"
        android:id="@+id/btn_A"
        android:layout_marginRight="5dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_directions_walk_black_24dp"
        android:id="@+id/imageView13"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/et_email"
        android:hint="Checker Name"
        android:textSize="18sp"
        android:padding="3dp"
        android:textStyle="bold"
        android:layout_above="@+id/imageView13"
        android:layout_toEndOf="@+id/btn_A" />

    <TextView
        android:text="Rotation ID:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:textSize="16sp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imgFac"
        android:layout_alignStart="@+id/et_email" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_face_black_24dp"
        android:id="@+id/imageView22"
        android:layout_above="@+id/imageView13"
        android:layout_alignParentStart="true" />

</RelativeLayout>
