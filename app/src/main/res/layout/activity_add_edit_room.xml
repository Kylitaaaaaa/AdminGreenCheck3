<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_edit_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thea.admingreencheck3.Add.AddEditRoomActivity">

    <TextView
        android:text="Room Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="19dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Building:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/et_End"
        android:layout_alignBottom="@+id/et_End"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Add"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Edit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_End"
        android:layout_below="@+id/et_Start"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_alignStart="@+id/et_Start"
        android:textSize="16sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_Start"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="50dp" />

    <TextView
        android:text="Rotation ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_End"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="21dp"
        android:id="@+id/textView15" />

    <Button
        android:text="B"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_A"
        android:id="@+id/btn_B"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:text="C"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_B"
        android:id="@+id/btn_C"
        android:layout_marginRight="5dp" />

    <Button
        android:text="D"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_C"
        android:id="@+id/btn_D"
        android:layout_marginRight="5dp" />

    <Button
        android:text="E"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_D"
        android:id="@+id/btn_E"
        android:layout_marginRight="5dp" />

    <Button
        android:text="F"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_E"
        android:id="@+id/btn_F"
        android:layout_marginRight="5dp" />

    <Button
        android:text="G"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/btn_A"
        android:layout_toRightOf="@id/btn_F"
        android:id="@+id/btn_G" />

    <Button
        android:text="A"
        android:background="@drawable/round_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:id="@+id/btn_A"

        android:layout_marginStart="19dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp" />
</RelativeLayout>
