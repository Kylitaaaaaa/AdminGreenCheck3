<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thea.admingreencheck3.Add.AddEditCourseOffering">


    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Add"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Edit"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="H"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_H"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_W"
        android:layout_marginRight="10dp" />


    <TextView
        android:text="Course Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ccode"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:layout_marginBottom="2dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/tv_Section"
        android:layout_below="@+id/tv_room"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:hint="Section"
        android:textSize="18sp" />

    <TextView
        android:text="Faculty Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Faculty"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_below="@+id/tv_ccode"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="Room Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_room"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:layout_below="@+id/tv_Faculty"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="Start Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_StartTime"
        android:padding="5dp"
        android:layout_alignBaseline="@+id/tv_EndTime"
        android:layout_alignBottom="@+id/tv_EndTime"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <TextView
        android:text="Days:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:layout_above="@+id/btn_T"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:text="T"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_T"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_M"
        android:layout_marginRight="10dp" />

    <Button
        android:text="F"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_F"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_H"
        android:layout_marginRight="10dp" />

    <Button
        android:text="W"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_W"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_T"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="End Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_EndTime"
        android:layout_marginStart="27dp"
        android:padding="5dp"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_below="@+id/tv_Section"
        android:layout_toEndOf="@+id/tv_StartTime" />

    <Button
        android:text="S"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_S"
        android:background="@drawable/round_button"

        android:layout_alignBottom="@+id/btn_F"
        android:layout_toEndOf="@+id/btn_F" />

    <Button
        android:text="M"
        android:layout_height="40dp"
        android:id="@+id/btn_M"
        android:background="@drawable/round_button"
        android:textSize="10sp"
        android:layout_width="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/tv_StartTime"
        android:layout_alignParentStart="true" />

</RelativeLayout>
