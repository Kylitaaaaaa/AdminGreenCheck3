<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thea.admingreencheck3.Add.AddEditCourseOffering">


    <Button
        android:text="H"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_H"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_W"
        android:layout_marginRight="10dp" />


    <Button
        android:text="T"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_T"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_M"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:text="F"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_F"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_H"
        android:layout_marginRight="10dp" />

    <Button
        android:text="W"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_W"
        android:background="@drawable/round_button"

        android:layout_alignTop="@+id/btn_M"
        android:layout_toRightOf="@+id/btn_T"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="End Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_EndTime"
        android:layout_marginStart="27dp"
        android:padding="5dp"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_below="@+id/til_section"
        android:layout_toEndOf="@+id/tv_StartTime" />

    <Button
        android:text="S"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_S"
        android:background="@drawable/round_button"

        android:layout_alignBottom="@+id/btn_F"
        android:layout_toEndOf="@+id/btn_F" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_note_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView8" />

    <TextView
        android:text="Faculty Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_Faculty"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tv_ccode"
        android:layout_alignStart="@+id/tv_ccode" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_local_library_black_24dp"
        android:id="@+id/imageView26"
        android:layout_alignTop="@+id/tv_Faculty"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Room Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_room"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_below="@+id/tv_Faculty"
        android:layout_alignStart="@+id/tv_Faculty" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@mipmap/ic_satellite_black_24dp"
        android:id="@+id/imageView27"
        android:layout_alignTop="@+id/tv_room"
        android:layout_alignParentStart="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_section"
        android:layout_below="@+id/tv_room"
        android:layout_alignStart="@+id/tv_room">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginTop="18dp"
            android:id="@+id/tv_Section"
            android:padding="5dp"
            android:hint="Section"
            android:textSize="18sp"
             />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="Start Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_StartTime"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/tv_EndTime"
        android:layout_alignBottom="@+id/tv_EndTime"
        android:layout_alignStart="@+id/til_section" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_supervisor_section"
        android:id="@+id/imageView28"
        android:layout_alignBottom="@+id/til_section"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/ic_access_time_black_24dp"
        android:layout_alignTop="@+id/tv_StartTime"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView29" />

    <TextView
        android:text="Course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ccode"
        android:padding="5dp"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_M" />

    <Button
        android:text="M"
        android:layout_height="40dp"
        android:id="@+id/btn_M"
        android:background="@drawable/round_button"
        android:textSize="10sp"
        android:layout_width="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/tv_StartTime"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

</RelativeLayout>
